/* pages/my/my.wxss */
._root{
  width: 100%;
  height: 100%;
}
.view-header{
  width: 100%;
  height: 250rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20px;
  /* justify-content: center; */
}
.headerIcon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50px;
  border: 2px solid white;
}
.view-list-item .item-icon{
width: 25px;
height: 25px;
padding-left: 10px;

}
.login-icon {
  flex: none;
}

.login-img {
  width: 750rpx;
}


.view-order-header{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.view-order-content{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  
}
.text{
  color: gray;
  font-size: 29rpx;
}
.view-order-content-item{
  width: 20%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.view-list-item{
  width: 100%;
  height: 95rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.zan-badge{position:relative}.zan-badge__count{position:absolute;top:-16px;right:0;height:1.6em;min-width:1.6em;line-height:1.6;padding:0 .4em;font-size:20px;border-radius:.8em;background:#f44;color:#fff;text-align:center;white-space:nowrap;transform:translateX(50%) scale(.5);transform-origin:center;z-index:10;box-shadow:0 0 0 2px #fff;box-sizing:border-box}
.btn-submit{
  width: 80%;
  background-color:#f82929;
  border-radius:10px;
  margin: 5%;
  color: white;
  font-size: 30rpx;
  text-align: center;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 30px; 
}

.navs {
  display: flex;
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

/* 第一部分 */
.view_1 {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 200px;
  background:-webkit-linear-gradient(bottom,#FFF,#6AA675);
}

.view_image_text {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
}

.image_radius {
  height: 80px;
  width: 80px;
  border-radius: 60px;
  margin-bottom: 15px;
}


.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow:hidden;
  display: flex;
  justify-content: center;
}