/* pages/RubbishList/RubbishList.wxss */

.search {
  width: 80%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.page_row {
  display: flex;
  flex-direction: row;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

.pick-bg {
  background-color: #fff;
  padding: 20rpx;
  font-size: 14px;
  color: #545454;
}

.item {
  display: flex;
  align-items: center;
  /* margin: 36rpx 40rpx; */
  justify-content: center;
}

.item .left {
  flex: 1;
  text-align: left;
}

.item .right {
  flex: 1;
  text-align: right;
}

.item .left .text-maxcount, .item .left .text-date {
  display: block;
  margin-bottom: 12rpx;
}

.text-room {
  padding: 5rpx 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 5rpx;
}

.text-date {
  color: #999999;
  font-size: 28rpx;
  font-weight:400;
  line-height:40rpx;
}
.productNameText {
  color: rgb(32, 27, 27);
  font-size: 35rpx;
  text-overflow:ellipsis;
  z-index: -1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-left: 10rpx;
 }

 .productNameText1 {
  color: rgb(32, 27, 27);
  font-size: 35rpx;
  text-overflow:ellipsis;
  z-index: -1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin-left: 15rpx;
 }

.text-maxcount {
  color: #222222;
  font-size: 32rpx;
  font-weight:500;
  line-height:44rpx;
  margin-left: 10rpx;
}

.input-box {
  width: 100%;
	position: absolute;
	left: 0;
	right: 0;
	display: flex;
	padding: 4px 6px;
	box-sizing: border-box;
}

.input-box input {
	flex: 1;
	border-radius: 10px;
	border: 1px #cecece solid;
	padding: 3px 4px;
	    outline: none;
}

.input-box button {
	width: 80px;
	background: #3CB371;
	border-radius: 21px;
	border: 1px #fffa solid;
  color: #ffffff;
  margin: 0px 6px;
  outline: none;
  font-size:12px;
}

.header{
  display: flex;
  background-color: rgba(216, 216, 231, 0.884);
  align-items: center;
  padding-top: 5px;
  padding-bottom: 5px;
  height: 60rpx;
}
.active{
  color: red;
}
.header .headerClass{
  color: red;
  margin-left: 20rpx;
}
.header .headerClass,
.header .headerPin{
  font-size: 28rpx;
}
.search{
  display: flex;
  height: 56rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color:white;
  width: 100%;
}
.search text{
  color: gainsboro;
  font-family: monospace;
  font-size: 30rpx;
  line-height: 46rpx;
    
}
.search image{
  padding-left:50rpx; 
  width: 46rpx;
  height: 46rpx;
}