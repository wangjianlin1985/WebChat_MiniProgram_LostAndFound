<view class="container">

<view class="login-icon">
  <image class="login-img" src="/images/img-home.png"></image>
</view>

<view class="login-from">

  <!--密码-->
  <view class="inputView">
    <label class="loginLab">原密</label>
    <input class="inputText" password="true" placeholder="请输入原密码" bindinput="passwordInput" />
  </view>

  <view class="line"></view>

  <!--密码-->
  <view class="inputView">
    <label class="loginLab">新密</label>
    <input class="inputText" password="true" placeholder="请输入新密码" bindinput="newPasswordInput" />
  </view>
<view class="line"></view>
  <!--按钮-->
  <view class="loginBtnView">
    <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">确定</button>
  </view>

</view>

</view>